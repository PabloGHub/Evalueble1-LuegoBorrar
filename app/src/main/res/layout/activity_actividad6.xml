<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/perfil2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
        >

            <Button
                android:id="@+id/btnPerfil1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir a Contactar"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintVertical_bias="0.02"
            />

            <Button
                android:id="@+id/btnPerfil2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web del usuario"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintVertical_bias="0.08"
            />

            <Button
                android:id="@+id/btnPerfil3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correo electronico"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintVertical_bias="0.141"
            />

            <TextView
                android:id="@+id/perfil1nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE: Miguek"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintVertical_bias="0.21"
            />

            <TextView
                android:id="@+id/perfil1edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDAD: 22"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintVertical_bias="0.24"
            />
            <TextView
                android:id="@+id/perfil1lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUNICIPIO: Sevilla"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintVertical_bias="0.27"
            />

            <ImageView
                android:id="@+id/perfil1avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="19dp"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>